<% @surveys.each do |survey| %>
  <div class='container'>
    <a class='button' href="/surveys/<%= survey.id %>"><%= survey.title %></a>

    <% if survey.creator_id == current_user.id %>
    <form class='button' id= 'edit-survey' action='/surveys/<%= survey.id %>/edit' method="get">
      <input type="submit" value="Edit" />
    </form>
    <form class='button' id= 'delete-survey' action='/surveys/<%= survey.id%>' method="POST">
      <input type="hidden" name="_method" value="delete" />
      <input  type="submit" value="Delete" />
    </form>
    <form class ='button' id= 'results' action='/surveys/<%= survey.id%>/results' method="GET">
      <input type="submit" value="Results" />
    </form>
    <%end%>
  </div>
<% end %>

<div class='create-survey'>

  <form action="/surveys" method="POST">
    <input id='title' type="text" name="title" placeholder="Title"/>
    <input type="submit" value="Create Survey" />
  </form>
</div>
