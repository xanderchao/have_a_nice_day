<h2><%= @survey.title %></h2>

<div class='container' id= 'create-question'>
  <form action="/surveys/<%=@survey.id%>/questions" method="POST">
    <input type="text" name="text" placeholder="Question"/>
    <input type="submit" value="Add" />
  </form>
</div>

<div class='container' id='question-list'>
  <% @survey.questions.each_with_index do |q,i| %>
    <h3><%= q.text %></h3>
    <% q.choices.each do |c| %>
      <li> <%= c.text %> </li>
    <% end %>
  <% end %>
</div>


